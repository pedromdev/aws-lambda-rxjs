{
  "compilerOptions": {
    "declaration": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": "dist",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "baseUrl": ".",
    "paths": {
      "aws-lambda-rxjs": ["./src/index"],
      "aws-lambda-rxjs/operators": ["./src/operators/index"],
      "aws-lambda-rxjs/handlers": ["./src/handlers/index"]
    }
  },
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
    "**/*.spec.ts"
  ]
}
